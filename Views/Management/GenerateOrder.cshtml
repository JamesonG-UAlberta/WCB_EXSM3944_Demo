@{
}

<h1>Create An Order With AppDev's Silly Grocery Store!</h1>
<p>@(ViewData["TestData"] as string)</p>
<p>@ViewBag.TestBag</p>


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Customer</label>
        <select class ="form-control" asp-items="@(ViewData["Customers"] as SelectList)"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Product</label>
        <select class ="form-control" asp-items="ViewBag.Products"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>